/* HOME PAGE CSS*/

/* Reset default margin and padding */
body, h1, h2, h3, p, ul, li {
    margin: 0;
    padding: 0;
    font-family: Arial, normal; /* Set default font to Arial */
    color: white; /* Set text color to white */
	
}

/* Style header */
header {
	position: relative;
    background-image: url("../assets/disco.jpg");
    background-size: cover;
    background-position: center; /* Center the background image */
    width: 100%; /* Fill the width of the screen */
    height: 66.666vh; /* 2/3rd of viewport height */
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

/* Logo image */
header img#logoglow {
    width: 25%; /* 1/4th of screen width */
    height: auto; /* Maintain aspect ratio */
	justify-content: center;
}

/* "Fun in the 70's" text */
header h1 {
    color: white;
    letter-spacing: 20px; /* Space out the letters */
	justify-content: center;
}

header h1 img {
    vertical-align: text-bottom; /* Align the images to the bottom of the text */
    margin-bottom: -10px; /* Adjust the margin to fine-tune the positioning */
	margin-left: -20px;
	justify-content: center;
}

/* Style navigation */
nav {
    background-color: rgba(72, 13, 218, 0.214); /* RGBA 4800daff with opacity 21.4% */
    width: 100%;
    text-align: center;
    position: absolute;
    top: calc(66.666vh - 50px); /* Bottom of header */
    left: 0;
    z-index: 3; /* Navigation appears above header */
	color: white;
	font-size: 20px;
}

nav ul {
    list-style-type: none;
    text-align: center;
	padding: 0;
	color: white;
}

nav ul li {
	display: inline-block; /* Keep nav links inline */
	color: white;
}

nav ul li a {
    text-decoration: none;
    padding: 15px 130px;
    display: inline-block;
    text-transform: uppercase; /* Make text all caps */
    font-weight: bold; /* Set font weight to bold */
	color: white;
}

nav ul li a.active {
    color: rgba(113, 228, 255, 1) !important; /* Change text color blue for active state */
}

nav ul li a:visited {
    color: rgba(251, 177, 249, 1); /* RGBA fbb1f9ff */
}

/* Nav Padding */
@media (max-width: 1100px) {
    nav ul li a {
        padding: 15px 100px;
		display: inline-block;
    }
}


@media (max-width: 999px) {
    nav ul li a {
        padding: 15px 50px;
		display: inline-block;
    }
}

@media (max-width: 800px) {
    nav ul li a {
        padding: 15px 10px;
		display: inline-block;
    }
	header h1 {
    letter-spacing: 5px;
	}
	header h1 img {
    vertical-align: text-bottom; /* Align the images to the bottom of the text */
    margin-bottom: -10px; /* Adjust the margin to fine-tune the positioning */
	margin-left: -5px;
	justify-content: center;
}
}


body {
	background-image: url("../assets/bottomdisco.png");
	display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

/* Style main section */
main {
    background-size: cover;
    padding: 20px;
    text-align: center;
    z-index: -5;
	position: relative;
}

main h2 {
    letter-spacing: 20px; /* Space out the letters */
    text-transform: uppercase; /* Make text all caps */
}

/* Style for the box container */
.box-container {
    display: flex;
    width: 100%; /* Make the container full width */
    flex-wrap: wrap;
    justify-content: center;
    max-width: 10000px; /* Set a maximum width for the container */
    margin: 0 auto; /* Center the container horizontally */
}

/* Style for each box */
.box {
    width: 444px;
    height: 199px;
    background-size: cover; /* Ensure the image maintains its aspect ratio */
    margin-bottom: 5px; /* Add some margin between boxes */
	margin-right: 5px; /* Space between boxes */
    box-sizing: border-box; /* Include padding and border in the box's total width and height */
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
	line-height: 1.5; /* Adjust the spacing between baselines */
	padding: 0 50px; /* Add padding on the sides of the text */
	font-size: 18px; /* Increase the font size */
}

/* Style footer */
footer {
		color: white;
		padding: 10px;
		background-color: transparent;
		font-size: 10px;
		bottom: 0;
		text-align: center;
}

footer a {
    color: rgb(113, 228, 255); /* Set link color for footer */
}
